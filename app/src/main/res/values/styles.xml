<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="dpUsage">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/milky_green</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/milky_green</item>
        <item name="fontPath">fonts/WorkSans-Regular.ttf</item>
    </style>

    <!--BOLD FONTS-->

    <style name="Text.B1" parent="AppTheme">
        <item name="fontPath">fonts/Metropolis-Bold.otf</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="Text.B2" parent="Text.B1">
        <item name="android:textSize">23dp</item>
    </style>

    <style name="Text.B3" parent="Text.B1">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Text.B4" parent="Text.B1">
        <item name="android:textSize">12dp</item>
    </style>

    <!--TABLET FONTS-->


    <!--REGULAR FONTS-->

    <style name="Text.R1" parent="AppTheme">
        <item name="fontPath">fonts/Metropolis-Regular.otf</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="Text.R3" parent="Text.R1">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Text.R4" parent="Text.R1">
        <item name="android:textSize">12dp</item>
    </style>

    <!--TABLET FONTS-->
    <style name="Text.M1" parent="AppTheme">
        <item name="fontPath">fonts/Metropolis-Medium.otf</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="Text.M3" parent="Text.M1">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Text.M2" parent="Text.M1">
        <item name="android:textSize">23dp</item>
    </style>

    <style name="Text.M4" parent="Text.M1">
        <item name="android:textSize">12dp</item>
    </style>


    <!--LIGHT FONTS-->

    <!--TABLET FONTS-->


    <style name="DialogSideInOutAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_to_bottom</item>
    </style>


    <style name="SideCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>
