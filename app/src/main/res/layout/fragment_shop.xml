<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.shop.ShopFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tekkr.organics.features.shop.ShopViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/milky_green"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/ivLogo"
            style="@style/Text.M3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_fresh"
            android:text="Good Morning\nWelcome to Tekkr organics"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvCart"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/grad2"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:visibility="gone"
            app:cardCornerRadius="18dp"
            app:cardElevation="20dp"
            app:layout_constraintBottom_toBottomOf="@id/ivLogo"
            app:layout_constraintEnd_toStartOf="@id/mcvProfile"
            app:layout_constraintTop_toTopOf="@id/ivLogo">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grad2"
                android:padding="14dp"
                android:src="@drawable/basket"
                app:tint="@color/white" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            app:cardCornerRadius="9dp"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="@id/mcvCart"
            app:layout_constraintTop_toTopOf="@id/mcvCart"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="1dp">

            <TextView
                style="@style/Text.B3"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@color/white"
                android:gravity="center"
                android:minWidth="18dp"
                android:paddingHorizontal="3dp"
                android:text="@{Integer.toString(viewModel.obsCartCount)}"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp"
                tools:text="2" />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/grad2"
            android:foreground="?selectableItemBackground"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            app:cardCornerRadius="18dp"
            app:cardElevation="20dp"
            app:layout_constraintBottom_toBottomOf="@id/ivLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivLogo">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grad2"
                android:padding="14dp"
                android:src="@drawable/icon_pofile"
                app:tint="@color/white" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@id/cvCart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogo">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/layoutRider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="vertical"
                android:fillViewport="true"
                android:requiresFadingEdge="vertical"
                tools:ignore="ContentDescription,UnusedAttribute">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvMango1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="14dp"
                        android:outlineAmbientShadowColor="@color/colorPrimary"
                        android:outlineSpotShadowColor="@color/colorPrimary"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="20dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/banner2"
                                android:adjustViewBounds="true"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                style="@style/Text.M3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="20dp"
                                android:lineSpacingExtra="5dp"
                                android:text="Fresh from farm\nCarbide free"
                                android:textAlignment="textStart"
                                android:textColor="@color/colorGrey500"
                                android:textSize="13dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                style="@style/Text.M3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="20dp"
                                android:lineSpacingExtra="5dp"
                                android:text="100% organic\nHandpicked in each box"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorGrey500"
                                android:textSize="13dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvFruits"
                        style="@style/Text.B3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="24dp"
                        android:paddingBottom="10dp"
                        android:text="Fruits"
                        android:textColor="@color/colorGrey900"
                        android:textSize="17dp"
                        app:layout_constraintTop_toBottomOf="@id/cvMango1" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cvFruits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvFruits">

                        <ImageView
                            android:id="@+id/ivFruits"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:padding="50dp"
                            android:src="@drawable/logo_fresh"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="#D5EFDB" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvFruits"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:nestedScrollingEnabled="false"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:layout_constraintTop_toTopOf="parent"
                            app:spanCount="2"
                            tools:itemCount="1"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:listitem="@layout/item" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tvVegetables"
                        style="@style/Text.B3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="14dp"
                        android:paddingBottom="10dp"
                        android:text="Vegetables"
                        android:layout_marginStart="24dp"
                        android:textColor="@color/colorGrey900"
                        android:textSize="17dp"
                        app:layout_constraintTop_toBottomOf="@id/cvFruits" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cvVegetables"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvVegetables">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvVegetables"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:layout_constraintTop_toTopOf="parent"
                            app:spanCount="2"
                            tools:itemCount="1"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:listitem="@layout/item" />

                        <ImageView
                            android:id="@+id/ivVegetables"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:padding="50dp"
                            android:src="@drawable/logo_fresh"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="#D5EFDB" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        android:id="@+id/tvMeat"
                        style="@style/Text.B3"
                        android:visibility="gone"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="24dp"
                        android:text="Meat"
                        android:textColor="@color/colorGrey900"
                        android:textSize="17dp"
                        app:layout_constraintTop_toBottomOf="@id/cvVegetables" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cvMeat"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvMeat">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvMeat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:layout_constraintTop_toTopOf="parent"
                            app:spanCount="2"
                            tools:itemCount="1"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:listitem="@layout/item" />

                        <ImageView
                            android:id="@+id/ivMeat"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:padding="50dp"
                            android:src="@drawable/logo_fresh"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="#D5EFDB" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <ImageView
                        android:id="@+id/ivBottom"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="50dp"
                        android:src="@drawable/logo_fresh"
                        app:layout_constraintTop_toBottomOf="@id/cvMeat"
                        app:tint="#D5EFDB" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvCart"
            android:foreground="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            android:visibility='@{viewModel.obsCartCount == 0 ? View.GONE : View.VISIBLE}'
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ivCart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:src="@drawable/basket"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvCart"
                style="@style/Text.B3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="VIEW CART"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintEnd_toStartOf="@id/ivCart" />

            <TextView
                android:id="@+id/tvCartItemsCount"
                style="@style/Text.M3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="@{Integer.toString(viewModel.obsCartCount)}"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="2" />

            <TextView
                android:id="@+id/tvCartItems"
                style="@style/Text.M3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:text="@{viewModel.obsCartCount == 1 ? @string/item : @string/items}"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@id/tvCartItemsCount"
                tools:text="Items   |" />

            <TextView
                android:id="@+id/tvCartPrice"
                style="@style/Text.B3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:text="@{'₹' + Integer.toString(viewModel.obsCartPrice)}"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@id/tvCartItems"
                tools:text="₹590" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>