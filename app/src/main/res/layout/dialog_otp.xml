<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tekkr.organics.features.dialogs.OTPDialog">

    <data>

        <variable
            name="host"
            type="com.tekkr.organics.features.dialogs.OTPDialog" />

    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/milky_white"
        app:cardCornerRadius="32sp"
        app:cardElevation="16sp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="32sp"
            android:paddingBottom="32sp"
            tools:ignore="ContentDescription,UnusedAttribute">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:foreground="?selectableItemBackground"
                android:paddingStart="10sp"
                android:paddingTop="22sp"
                android:paddingEnd="22sp"
                android:paddingBottom="10sp"
                android:src="@drawable/ic_baseline_close_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorGrey500" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="20sp"
                android:fontFamily="sans-serif"
                android:text="OTP sent to registered phone number"
                android:textColor="#787878"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnClose" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="5sp"
                android:fontFamily="sans-serif"
                android:text="You can resend OTP in 20Sec"
                android:textColor="#787878"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPhone" />

            <TextView
                android:id="@+id/tvResend"
                style="@style/Text.B3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:foreground="?selectableItemBackground"
                android:padding="8sp"
                android:text="Resend"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tvTimer"
                app:layout_constraintStart_toEndOf="@id/tvTimer"
                app:layout_constraintTop_toTopOf="@id/tvTimer" />

            <EditText
                android:id="@+id/etOTP"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="32sp"
                android:background="@drawable/edit_text_round_gray_empty_background"
                android:backgroundTint="#D2DDDD"
                android:gravity="center"
                android:hint="Enter OTP"
                android:inputType="number"
                android:maxLength="4"
                android:paddingVertical="16sp"
                android:textColor="@color/colorGrey700"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTimer" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitOTP"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="32sp"
                android:backgroundTint="@color/colorAccent"
                android:paddingVertical="20sp"
                android:text="Submit otp"
                app:cornerRadius="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etOTP" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>