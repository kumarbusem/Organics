<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.home.HomeFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tekkr.organics.features.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/milky_green"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/tvName"
            style="@style/Text.M3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="14dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_fresh"
            android:text="Good Morning\nWelcome to Tekkr organics"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/grad2"
            android:id="@+id/mcvCart"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            app:cardCornerRadius="18dp"
            app:cardElevation="20dp"
            app:layout_constraintBottom_toBottomOf="@id/tvName"
            app:layout_constraintEnd_toStartOf="@id/mcvProfile"
            app:layout_constraintTop_toTopOf="@id/tvName">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grad2"
                android:padding="14dp"
                android:src="@drawable/basket"
                app:tint="@color/white" />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:background="@color/white"
            app:cardElevation="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorPrimary"
            app:cardCornerRadius="9dp"
            app:layout_constraintTop_toTopOf="@id/mcvCart"
            app:layout_constraintEnd_toEndOf="@id/mcvCart"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:minWidth="18dp"
                tools:text="2"
                android:text="@{Integer.toString(viewModel.obsCartCount)}"
                android:paddingHorizontal="3dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                style="@style/Text.B3"
                android:textSize="10dp"
                android:background="@color/white"
                android:layout_height="18dp"/>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/mcvProfile"
            android:background="@drawable/grad2"
            app:cardElevation="20dp"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            app:cardCornerRadius="18dp"
            app:layout_constraintBottom_toBottomOf="@id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvName">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grad2"
                android:padding="14dp"
                android:src="@drawable/icon_pofile"
                app:tint="@color/white" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvName">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/layoutRider"
                android:layout_width="match_parent"
                android:fadingEdge="vertical"
                android:requiresFadingEdge="vertical"
                android:layout_height="match_parent"
                android:fillViewport="true"
                tools:ignore="ContentDescription,UnusedAttribute">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvMango1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:outlineAmbientShadowColor="@color/colorPrimary"
                        android:outlineSpotShadowColor="@color/colorPrimary"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="10dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/banner1"
                            android:layout_height="200dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginEnd="20dp"
                                style="@style/Text.M3"
                                android:textSize="17dp"
                                android:layout_marginTop="20dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:textAlignment="textEnd"
                                android:text="Banaganapalli Mangoes"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/milky_green"
                                android:layout_marginEnd="20dp"
                                style="@style/Text.R3"
                                android:textSize="17dp"
                                android:lineSpacingExtra="8dp"
                                android:layout_marginBottom="20dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textAlignment="textEnd"
                                android:text="Carbide free\n100% organic\nFresh from farm\nHandpicked in each box"
                                android:layout_height="wrap_content"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvFruits"
                        style="@style/Text.B3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="14dp"
                        android:text="Fruits"
                        android:textColor="@color/colorGrey900"
                        android:textSize="17dp"
                        app:layout_constraintTop_toBottomOf="@id/cvMango1" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:id="@+id/cvFruits"
                        app:layout_constraintTop_toBottomOf="@id/tvFruits"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:padding="50dp"
                            android:id="@+id/ivFruits"
                            android:src="@drawable/logo_fresh"
                            android:layout_height="200dp"
                            app:tint="#D5EFDB" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvFruits"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:nestedScrollingEnabled="false"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="2"
                            tools:itemCount="1"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:listitem="@layout/item" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/tvVegetables"
                        style="@style/Text.B3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="14dp"
                        android:text="Vegetables"
                        android:textColor="@color/colorGrey900"
                        android:textSize="17dp"
                        app:layout_constraintTop_toBottomOf="@id/cvFruits" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:id="@+id/cvVegetables"
                        app:layout_constraintTop_toBottomOf="@id/tvVegetables"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvVegetables"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="2"
                            tools:itemCount="1"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:listitem="@layout/item" />
                        <ImageView
                            android:layout_width="match_parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:padding="50dp"
                            android:id="@+id/ivVegetables"
                            android:src="@drawable/logo_fresh"
                            android:layout_height="200dp"
                            app:tint="#D5EFDB" />
                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <TextView
                        android:id="@+id/tvMeat"
                        style="@style/Text.B3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="14dp"
                        android:text="Meat"
                        android:textColor="@color/colorGrey900"
                        android:textSize="17dp"
                        app:layout_constraintTop_toBottomOf="@id/cvVegetables" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:id="@+id/cvMeat"
                        app:layout_constraintTop_toBottomOf="@id/tvMeat"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvMeat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginHorizontal="10dp"
                            android:visibility="gone"
                            android:nestedScrollingEnabled="false"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="2"
                            tools:itemCount="1"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:listitem="@layout/item" />
                        <ImageView
                            android:layout_width="match_parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:padding="50dp"
                            android:id="@+id/ivMeat"
                            android:src="@drawable/logo_fresh"
                            android:layout_height="200dp"
                            app:tint="#D5EFDB" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>