<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.profile.ProfileFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tekkr.organics.features.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/milky_green"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:layout_width="?actionBarSize"
            android:id="@+id/btnBack"
            android:padding="20dp"
            android:foreground="?selectableItemBackground"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="?actionBarSize"
            app:tint="@color/colorGrey900" />


        <ImageView
            android:layout_width="150dp"
            android:id="@+id/ivFruitPlate"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true"
            android:src="@drawable/fruit_plate"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/tvName"
            style="@style/Text.M3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_fresh"
            android:text="Good Morning\nWelcome to Tekkr organics"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivFruitPlate"
            app:layout_constraintBottom_toBottomOf="@id/ivFruitPlate"
            app:tint="@color/colorPrimary" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/ivFruitPlate"
            app:layout_constraintBottom_toTopOf="@id/btnLogout"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:layout_height="0dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:text="LOGOUT"
            style="@style/Text.B3"
            android:id="@+id/btnLogout"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:layout_marginBottom="14dp"
            android:paddingStart="20dp"
            android:background="@color/white"
            android:textColor="@color/colorGrey900"
            android:layout_marginTop="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ic_baseline_power_settings_new_24"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/btnLogout"
            app:layout_constraintBottom_toBottomOf="@id/btnLogout"
            android:layout_height="20dp"
            app:tint="@color/colorGrey900" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>