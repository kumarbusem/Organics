<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tekkr.organics.features.dialogs.OTPDialog">

    <data>

        <variable
            name="item"
            type="com.tekkr.data.models.Item" />



    </data>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="14dp"
        android:layout_margin="6dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            tools:ignore="ContentDescription,UnusedAttribute">

            <ImageView
                android:layout_width="120dp"
                android:src="@drawable/mangos"
                android:id="@+id/ivMango1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="120dp"/>

            <TextView
                android:layout_width="0dp"
                android:id="@+id/tvMango1"
                tools:text="Mangoes (3Kg)"
                android:text="@{item.name + '('  + item.quantity + item.unit + ')'}"
                style="@style/Text.B3"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_marginHorizontal="14dp"
                android:textColor="@color/colorGrey900"
                app:layout_constraintTop_toBottomOf="@id/ivMango1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvMangoPrice1"
                style="@style/Text.M3"
                tools:text="₹599"
                android:text="@{'₹'  + item.item_price}"
                android:textColor="@color/colorGrey700"
                app:layout_constraintTop_toBottomOf="@id/tvMango1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="26dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:id="@+id/tvMangoPlus1"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginTop="14dp"
                app:layout_constraintStart_toEndOf="@id/tvMangoCount1"
                app:layout_constraintTop_toBottomOf="@id/tvMangoPrice1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="26dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_height="match_parent"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvMangoCount1"
                android:text="0"
                style="@style/Text.B2"
                android:textSize="16dp"
                android:textColor="@color/colorGrey900"
                android:paddingHorizontal="12dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="@id/tvMangoPlus1"
                app:layout_constraintStart_toEndOf="@id/tvMangoMinus1"
                app:layout_constraintBottom_toBottomOf="@id/tvMangoPlus1"
                app:layout_constraintEnd_toStartOf="@id/tvMangoPlus1"
                android:layout_height="match_parent"/>
            <androidx.cardview.widget.CardView
                android:layout_width="26dp"
                app:cardCornerRadius="12dp"
                android:id="@+id/tvMangoMinus1"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="@id/tvMangoPlus1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvMangoCount1"
                android:layout_height="26dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:background="@color/milky_green"
                    android:src="@drawable/ic_baseline_remove_24"
                    android:layout_height="match_parent"
                    app:tint="@color/colorPrimary" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>