<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tekkr.organics.features.dialogs.FilePickerDialogFragment">

    <data>

        <variable
            name="host"
            type="com.tekkr.organics.features.dialogs.FilePickerDialogFragment" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/milky_white"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="26dp"
            tools:ignore="ContentDescription,UnusedAttribute">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/clCamera"
                style="@style/Text.M3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/colorAccent"
                android:padding="14dp"
                android:text="Camera"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:cornerRadius="20dp"
                app:icon="@drawable/icon_camera"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clGallery"
                style="@style/Text.M3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/colorAccent"
                android:padding="14dp"
                android:text="gallery"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:cornerRadius="20dp"
                app:icon="@drawable/icon_image"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clCamera" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</layout>
